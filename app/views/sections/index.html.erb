<h1>Listing sections</h1>

<table>
  <tr>
    <th>Year</th>
    <th>Term</th>
    <th>Section</th>
    <th>Crn</th>
    <th>Days</th>
    <th>Time start</th>
    <th>Time end</th>
    <th>Instructor</th>
    <th>Course</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sections.each do |section| %>
  <tr>
    <td><%= section.year %></td>
    <td><%= section.term %></td>
    <td><%= section.section %></td>
    <td><%= section.crn %></td>
    <td><%= section.days %></td>
    <td><%= section.time_start %></td>
    <td><%= section.time_end %></td>
    <td><%= section.instructor %></td>
    <td><%= section.course %></td>
    <td><%= link_to 'Show', section %></td>
    <td><%= link_to 'Edit', edit_section_path(section) %></td>
    <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

